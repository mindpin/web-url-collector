.page-url-info-show
  .actions
    %a.index{:href => '/', :title => '返回列表'}
      %i.fa.fa-arrow-left 

    %a.delete{:href => "javascript:;", :"data-urlinfoid" => @url_info.id, :title => '删除'}
      %i.fa.fa-trash-o

  .url-info
    :ruby
      tags_array = @url_info.tags_array
      desc = @url_info.desc
      image_url = @url_info.image_url

    .title= @url_info.title
    .site
      %i.fa.fa-arrow-right
      %span= @url_info.site

    .url
      %span 长网址：
      %a{:href => @url_info.url}= @url_info.url

    .short-url
      %span 短网址：
      %a{:href => @url_info.short_url}= @url_info.short_url

    .qrcode
      - code = @url_info.short_url.split('/').last()
      - qrcode_url = "http://img.teamkn.com/qr/#{code}.png"

      %span 二维条码：
      %br
      %img{:src => qrcode_url}

    - if !desc.blank?
      .desc= simple_format desc

    - if !tags_array.blank?
      .tags
        %i.fa.fa-tags
        - tags_array.each do |tag|
          %span.tag ##{tag}

    - if image_url.present?
      .screenshot
        %span 网页截图：
        %br
        %img{:src => "#{image_url}@640w_360h_1e_1c"}
